page{
  background: #f8f8f8;
}
.details{
  margin: 0 20rpx;
}
.details-group{
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.details-img{
}
.details-img image{
  height: 540rpx;
  width: 100%;
}
.details-price{
  color: #eb5e1b;
}
.details-price .txt1{
  margin-right: 10rpx;
}
.details-price .txt2{
  font-size:20rpx;
}
.details-discount{
  color: #949494;
}
.details-discount .txt1{
  margin-right: 10rpx;
}
.details-discount .txt2{
  text-decoration: line-through;
}
.details-tit{
  
}
.details-tit text{
  color: #000;
  font-size: 38rpx;
}
.details-salesVolume{
  color: #949494;
}
.details-salesVolume .txt1{
  margin-right: 10rpx;
}
.details-salesVolume .txt2{
  
}
.details-quantity{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items:center;
  border-bottom:thin solid #f0f0f0;
}
.details-quantity .item2{
  display: flex;
  justify-content: space-between;
  align-items:center;
}
.details-quantity text{
  
}
.details-quantity button{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}
.details-quantity input{
  width: 60rpx;
  text-align: center;
}
.details-total{
  display: flex;
  justify-content:flex-end;
  align-items:center;
  height: 100rpx;
  border-bottom:thin solid #f0f0f0;
}
.details-total .txt1{
  margin-right: 10rpx;
}
.details-total .txt2{
  color: #eb5e1b;
}
.details-purchase{
  display: flex;
  justify-content: flex-end;
  align-items:center;
  height: 100rpx;
}
.details-purchase .txt1{
  margin-right: 10rpx;
}
.details-purchase .txt2{
  margin-right: 20rpx;
  color: #eb5e1b;
}
.details-purchase button{
  margin: 0;
}
.details-shadow{
  background: #000;
  opacity: .3;
  height: 100vh;
  width: 750rpx;
  position: absolute; 
  left: 0; 
  top:0;
  z-index: 1;
}
.details-confirm{
  opacity: .9;
  background: #fafafa;
  height: 70vh;
  position:absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  z-index: 2;
}
.details-confirm-close{
  font-size: 50rpx;
  width: 100rpx;
  line-height: 100rpx;
  text-align: center;
  height: 100rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.details-confirm-title{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  border-bottom: thin solid #e9e9e9;
}
.details-confirm-title .tit{
  font-size: 36rpx;
}
.details-confirm-total{
  text-align: center;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-top: 80rpx;
}
.details-confirm button{
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  width: 710rpx;
}
.network{
  color: #eb5e1b;
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}